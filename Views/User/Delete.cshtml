
@model ApplicationTest1.Models.User
@{
    ViewBag.Title = "Delete";
    ViewBag.Titre = "User";
}


@{
    string Action = "Delete";
    string titre = "Delete registration";
}

<div class="row">

    <div class="col-md-11">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 style="text-decoration:underline; font-style:italic">@titre</h3>
                        <p class="alert alert-danger">
                            Confirmation: Do you really want to remove this user ?
                        </p>
                    </div>
                    <div class="box-body">
                        <div class="col-sm-offset-1 col-sm-8">
                            @using (Html.BeginForm(Action, "User", FormMethod.Post))
                            {
                                <div class="row">
                                    <div class="form-group col-sm-5">
                                        @Html.Label("Name") @Html.ValidationMessage("Username", new { @class = "text-danger" })
                                        @Html.TextBox("Username", Model.Username, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-5">
                                        @Html.Label("Surname") @Html.ValidationMessage("Usersurname", new { @class = "text-danger" })
                                        @Html.TextBox("Usersurname", Model.Usersurname, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-5">
                                        @Html.Label("CellPhone") @Html.ValidationMessage("UserCellPhone", new { @class = "text-danger" })
                                        @Html.TextBox("UserCellPhone", Model.UserCellPhone, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-offset-1">
                                        <button type="submit" class="btn btn-sm btn-primary"> Submit </button>
                                        <a href="@Url.Action("Index")" class="btn btn-sm btn-default">Cancel</a>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                    <div class="box-footer clearfix no-border"></div>
                </div>
            </div>
        </div>

